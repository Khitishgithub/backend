<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Backend App</title>
    <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
    >
</head>
<body>
<div class="page-container">
    
    <div class="page">
        <form action="/" method="POST" class="page-header">
          <h3>Title</h3>
          
            <input type="text" name="title" id="title" placeholder="Enter your title">
            <h3>Content</h3>

            <textarea type="text" name="content" id="content" placeholder="Enter your Content"></textarea>

            <button type="submit">Post</button>
        </form>
        <ul class="page-list">
            <% todoTasks.forEach(details => { %>
            <li class="page-list-item">
                <div class="page-list-item-name"><%= details.title %></div>
                <div class="page-list-item-name"><%= details.content %></div>
             
                <a href="/edit/<%= details._id %>" class="edit">
                    <span>Edit</span>
                </a>
             
                <a href="/remove/<%= details._id %>" class="remove">
                    <span>Delete</span>
                </a>
            </li>
            <% }) %>
        </ul>
    </div>
</div>
</body>
</html>